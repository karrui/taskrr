<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new task</h1>
        <div style="width:40%; margin: 0 auto">
                <form action="/tasks" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="title" aria-describedby="task-title">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="description" placeholder="Give a brief description of what task this is"></textarea>
                </div>
                <div class="form-group">
                    <label>Category: </label>
                    <select name="category_id">
                        <% categories.forEach(function(category) { %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="location" placeholder="location">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="start_dt" value="2012-05-15 21:05" id="datetimepicker">
                    <input type="text" class="form-control" name="end_dt" value="2012-05-15 22:05" id="datetimepicker">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="price" placeholder="price">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-default btn-block">Submit!</button>
                </div>
            </form>
            <a href="/tasks">Go back</a>
        </div>
    </div>
</div>
<% include partials/footer %>