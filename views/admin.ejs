<% include partials/header %>

<div class="container">
        <% if (1!==1)  { %>
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>
                        You aren't authorized to access here!!</h1>
                    <div>
                        <a href="/" class="btn btn-primary">
                            <span class="glyphicon glyphicon-home"></span>
                            Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="container">
            <a class="btn btn-primary" href="/admin_users">Manage Users</a>
            <a class="btn btn-primary" href="/tasks">Manage Tasks</a>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="container">
                        <h1 align="center">Total Number of users to date:</h1>
                        <h2 align="center"><%=countUser%></h2>
                    </div>
                    <br>
                    <div class="container">
                        <canvas id="lineChart"></canvas>
                    </div>
                </div>
                <div class="col">
                     <div class="container">
                        <h1 align="center">Total Number of Tasks to date:</h1>
                        <h2 align="center"><%=countedTasks%></h2>
                    </div>
                    <br>
                    <div class="container">
                        <canvas id="doughnutChart"></canvas>
                    </div>
                    <br>
                    <div class="container">
                        <canvas id="taskLineChart"></canvas>
                    </div>
                    <br>
                    <div class="container">
                        <canvas id="offerLineChart"></canvas>
                    </div>
                </div>
        </div>
        </div>
        <% } %>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
<!--doughnut chart-->
<script>

    window.onload = function() {
        var ctx_doughnut = document.getElementById("doughnutChart");
        window.myDoughnut = new Chart(ctx_doughnut, config_doughnut);

        var ctx_line = document.getElementById("lineChart");
        window.myLine = new Chart(ctx_line, config_line);

        var ctx_task_line = document.getElementById("taskLineChart");
        window.myTaskLine = new Chart(ctx_task_line, config_task_line);

        var ctx_offer_line = document.getElementById("offerLineChart");
        window.myOfferLine = new Chart(ctx_offer_line, config_offer_line);
    };

    var config_doughnut = {
        type: 'doughnut',
        data: {
            labels: <%-labels%>,
            datasets: [{
                label: 'Number of tasks in category',
                data: <%-data%>,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(185, 31, 202, 0.2)',
                    'rgba(202, 31, 134, 0.2)',
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(185, 31, 202, 1)',
                    'rgba(202, 31, 134, 1)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            legend: {
                display:false,
                position: 'top',
            },
            title: {
                display: true,
                text: "Number of tasks in each category"
            },
            animation: {
                animateScale: true,
                animateRotate: true
            }
        }
    };

    var config_line = {
        type: 'line',
        data: {
            labels: <%-userCountLabel%>,
            datasets: [{
                label: 'Total number of users in a given month',
                data: <%-userCountData%>,
            }]
        },
        options: {
            responsive: true,
            legend: {
                display:false,
                position: 'top',
            },
            title: {
                display: true,
                text: "Total number of users in a given month"
            },
        }
    };

    //
    var config_task_line = {
        type: 'line',
        data: {
            labels: <%-taskCountLabel%>,
            datasets: [{
                label: 'Tasks',
                data: <%-taskCountData%>,
                backgroundColor: "rgba(255,153,0,0.4)"
            }]
        },
        options: {
            responsive: true,
            legend: {
                display:false,
                position: 'top',
            },
            title: {
                display: true,
                text: "Total number of tasks for the past 6 months"
            },
        }
    };

    //
    var config_offer_line = {
        type: 'line',
        data: {
            labels: <%-offerCountLabel%>,
            datasets: [{
                label: 'Offers',
                data: <%-offerCountData%>,
                backgroundColor: "rgba(153,255,51,0.4)"
            }]
        },
        options: {
            responsive: true,
            legend: {
                display:false,
                position: 'top',
            },
            title: {
                display: true,
                text: "Total number of offers for the past 6 months"
            },
        }
    };

</script>

<% include partials/footer %>
